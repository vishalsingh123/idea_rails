<div class="main object-non-visible" data-animation-effect="fadeInDownSmall" data-effect-delay="200">
<div class="form-block center-block">
<h2 class="title" align='center'><%= action %></h2>
<hr>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class=>'form-horizontal'} ) do |f| %>
  <%= devise_error_messages! %>


<div class="form-group has-feedback">
    <%= f.label :firstName , :class => 'col-sm-3 control-label' %>
<div class="col-sm-8">
    <%= f.text_field :firstName,:class=>'form-control', autofocus: true, :maxlength => 20 %>
<i class="fa fa-user form-control-feedback"></i>
  </div>
  </div>


	<div class="form-group has-feedback">
    <%= f.label :lastName , :class => 'col-sm-3 control-label' %>
		<div class="col-sm-8">
    	<%= f.text_field :lastName,:class=>'form-control', :maxlength => 20%>
			<i class="fa fa-user form-control-feedback"></i>
  	</div>
  </div>


	<div class="form-group has-feedback">
    <%= f.label :email , :class => 'col-sm-3 control-label' %>
		<div class="col-sm-8">
    	<%= f.email_field :email,:class=>'form-control'%>
			<i class="fa fa-envelope form-control-feedback"></i>
  	</div>
  </div>

	<% if action=="Update" %>
		<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    	<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  	<% end %>
	<% end %>

	<div class="form-group has-feedback">
    <%= f.label :password , :class => 'col-sm-3 control-label' %>
		<% if action=="Update" %><i>(leave blank if you don't want to change it)</i><br/><% end %> 
		<div class="col-sm-8">
    	<%= f.password_field :password,:class=>'form-control', autocomplete: 'off'%>
			<i class="fa fa-lock form-control-feedback"></i>
  	</div>
  </div>

	<div class="form-group has-feedback">
    <%= f.label :password_confirmation , :class => 'col-sm-3 control-label' %>
		<div class="col-sm-8">
    	<%= f.password_field :password_confirmation, :class=>'form-control', autocomplete: 'off'%>
			<i class="fa fa-lock form-control-feedback"></i>
  	</div>
  </div>

<% if action=="Update" %>
	<div class="form-group has-feedback">
    <%= f.label :current_password , :class => 'col-sm-3 control-label' %> <i>(we need your current password to confirm your changes)</i><br />
		<div class="col-sm-8">
    	<%= f.password_field :current_password, :class=>'form-control', autocomplete: "off" %>
  	</div>
  </div>
<% end %>

	<div class="form-group has-feedback">
    <%= f.label :telephone , :class => 'col-sm-3 control-label' %>
		<div class="col-sm-8">
    	<%= f.text_field :telephone,:class=>'form-control', :maxlength => 10%>
			<i class="fa fa-phone form-control-feedback"></i>
  	</div>
  </div>

	<div class="form-group has-feedback">
    <%= f.label :avatar , :class => 'col-sm-3 control-label' %>
		<div class="col-sm-8">
    	<%= f.file_field :avatar%>
  	</div>
  </div>


  <div class="form-group">
  	<div class="col-sm-offset-3 col-sm-8">
   		<%= f.submit action , :class=> 'btn btn-default'%>
  	</div>
  </div>

<%end%>
	</div>
</div>

