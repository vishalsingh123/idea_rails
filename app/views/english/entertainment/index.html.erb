<!-- ============ Set Title and Description for page -->
  <% content_for :title do %>
    <%= "Entertainment English" %>
  <% end %>
  <% content_for :description do %>
    <%= "Latest Entertainment News in english from Bollywood Hungama, First Post, Rediff" %>
  <% end %>
<!-- ============================================== -->


<%= link_to english_entertainment_path(:date => Time.now.strftime("%Y-%m-%d")), {:class => "btn btn-light-gray btn-sm #{'active' if @date==Time.now.strftime("%Y-%m-%d")}"  } do %>
 Today <i class="fa fa-chevron-right pl-10"></i> 
<% end  %>
<%= link_to english_entertainment_path(:date => 1.day.ago.strftime("%Y-%m-%d")), {:class => "btn btn-light-gray btn-sm #{'active' if @date==1.day.ago.strftime("%Y-%m-%d")}"} do %>
	Yesterday <i class="fa fa-chevron-right pl-10"></i> 
<% end  %>
<%= link_to english_entertainment_path(:date => 2.day.ago.strftime("%Y-%m-%d")), {:class => "btn btn-light-gray btn-sm #{'active' if @date==2.day.ago.strftime("%Y-%m-%d")}"} do %>
 	<%= 2.day.ago.strftime("%d %b")%> <i class="fa fa-chevron-right pl-10"></i>
<% end  %>
<%= link_to english_entertainment_path(:date => 3.day.ago.strftime("%Y-%m-%d")), {:class => "btn btn-light-gray btn-sm #{'active' if @date==3.day.ago.strftime("%Y-%m-%d")}"} do %>
	<%= 3.day.ago.strftime("%d %b")%> <i class="fa fa-chevron-right pl-10"></i>
<% end  %>
<%= link_to english_entertainment_path(:date => 4.day.ago.strftime("%Y-%m-%d")), {:class => "btn btn-light-gray btn-sm #{'active' if @date==4.day.ago.strftime("%Y-%m-%d")}"} do %>
	<%= 4.day.ago.strftime("%d %b")%> <i class="fa fa-chevron-right pl-10"></i>
<% end  %>

<ul class="nav nav-tabs">
  <li class="active"><a href="#bh" data-toggle="tab">BollywoodHungama</a></li>
  <li><a href="#fp" data-toggle="tab">First Post</a></li>
  <li><a href="#rd" data-toggle="tab">Rediff</a></li>
</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in" id="bh"><center><%= image_tag "spinner.gif" %></center></div>
  <div class="tab-pane fade" id="fp"><center><%= image_tag "spinner.gif" %></center></div>
  <div class="tab-pane fade" id="rd"><center><%= image_tag "spinner.gif" %></center></div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $.get("<%= english_entertainment_bollywood_hungama_path%>?date=<%= @date %>");
    $.get("<%= english_entertainment_first_post_path%>?date=<%= @date %>");
    $.get("<%= english_entertainment_rediff_path%>?date=<%= @date %>");
		ga('send', 'pageview', location.pathname);
  });
</script>
