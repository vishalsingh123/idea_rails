<!-- ============ Set Title and Description for page -->
  <% content_for :title do %>
    <%= "Technology English" %>
  <% end %>
  <% content_for :description do %>
    <%= "Latest Technology News in english from Gadgets Now, TechGig" %>
  <% end %>
<!-- ============================================== -->


<div class="row">
		<%#= render "top_gainer" %>
		<%#= render "top_looser" %>
</div>

<%= link_to english_tech_path(:date => Time.now.strftime("%Y-%m-%d")), {:class => "btn btn-light-gray btn-sm #{'active' if @date==Time.now.strftime("%Y-%m-%d")}"  } do %>
 Today <i class="fa fa-chevron-right pl-10"></i> 
<% end  %>
<%= link_to english_tech_path(:date => 1.day.ago.strftime("%Y-%m-%d")), {:class => "btn btn-light-gray btn-sm #{'active' if @date==1.day.ago.strftime("%Y-%m-%d")}"} do %>
	Yesterday <i class="fa fa-chevron-right pl-10"></i> 
<% end  %>
<%= link_to english_tech_path(:date => 2.day.ago.strftime("%Y-%m-%d")), {:class => "btn btn-light-gray btn-sm #{'active' if @date==2.day.ago.strftime("%Y-%m-%d")}"} do %>
 	<%= 2.day.ago.strftime("%d %b")%> <i class="fa fa-chevron-right pl-10"></i>
<% end  %>
<%= link_to english_tech_path(:date => 3.day.ago.strftime("%Y-%m-%d")), {:class => "btn btn-light-gray btn-sm #{'active' if @date==3.day.ago.strftime("%Y-%m-%d")}"} do %>
	<%= 3.day.ago.strftime("%d %b")%> <i class="fa fa-chevron-right pl-10"></i>
<% end  %>
<%= link_to english_tech_path(:date => 4.day.ago.strftime("%Y-%m-%d")), {:class => "btn btn-light-gray btn-sm #{'active' if @date==4.day.ago.strftime("%Y-%m-%d")}"} do %>
	<%= 4.day.ago.strftime("%d %b")%> <i class="fa fa-chevron-right pl-10"></i>
<% end  %>


<ul class="nav nav-tabs">
  <li class="active"><a href="#gn" data-toggle="tab">GadgetsNow</a></li>
  <li><a href="#tg" data-toggle="tab">TechGig</a></li>
</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in" id="gn"><center><%= image_tag "spinner.gif" %></center></div>
  <div class="tab-pane fade " id="tg"><center><%= image_tag "spinner.gif" %></center></div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $.get("<%= english_tech_gadgets_now_path%>?date=<%= @date %>");
    $.get("<%= english_tech_techgig_path%>?date=<%= @date %>");
		ga('send', 'pageview', location.pathname);
  });
</script>
